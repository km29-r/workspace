package com.example.contactapp.entity;

import jakarta.persistence.*;
import lombok.Getter;
import lombok.Setter;

@Getter
@Setter
@Entity // データベースのテーブルとして扱う
@Table(name = "contacts") // テーブル名を指定
public class Contact {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY) // IDを自動生成
    private Long id;

    @Column(nullable = false) // 必須項目
    private String name;

    @Column(nullable = false)
    private String email;

    @Column(nullable = false, length = 1000) // 最大1000文字
    private String message;
}
